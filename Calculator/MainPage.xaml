<Page
    x:Class="Calculator.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Calculator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
        <Button x:Name="addButton" Content="+" HorizontalAlignment="Left" Margin="1156,453,0,0" VerticalAlignment="Top" Width="200" Height="150" FontSize="50" Click="addButton_Click"/>
        <Border x:Name="outPutBorder" BorderBrush="Gray" BorderThickness="3" HorizontalAlignment="Left" Height="96" Margin="10,9,0,0" VerticalAlignment="Top" Width="1346">
            <TextBlock x:Name="outPutText" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Height="74" Width="1336" FontSize="72" FontFamily="Global User Interface" TextAlignment="Right" Margin="-1,9,0,0"/>
        </Border>
        <Button x:Name="subtractButton" Content="-" HorizontalAlignment="Left" Margin="1156,303,0,0" VerticalAlignment="Top" Height="150" Width="200" FontSize="50" Click="subtractButton_Click"/>
        <Button x:Name="oneButton" Content="1" HorizontalAlignment="Left" Margin="35,153,0,0" VerticalAlignment="Top" Width="200" Height="110" FontSize="80" VerticalContentAlignment="Bottom" Click="oneButton_Click"/>
        <Button x:Name="twoButton" Content="2" HorizontalAlignment="Left" Margin="235,153,0,0" VerticalAlignment="Top" Width="200" Height="110" FontSize="80" Click="twoButton_Click" VerticalContentAlignment="Bottom"/>
        <Button x:Name="threeButton" Content="3" HorizontalAlignment="Left" Margin="440,153,0,0" VerticalAlignment="Top" Width="200" Height="110" FontSize="80" Click="threeButton_Click" VerticalContentAlignment="Bottom"/>
        <Button x:Name="fourButton" Content="4" HorizontalAlignment="Left" Margin="35,268,0,0" VerticalAlignment="Top" Width="200" Height="110" FontSize="80" Click="fourButton_Click" VerticalContentAlignment="Bottom"/>
        <Button x:Name="fiveButton" Content="5" HorizontalAlignment="Left" Margin="235,268,0,0" VerticalAlignment="Top" Width="200" Height="110" FontSize="80" Click="fiveButton_Click" VerticalContentAlignment="Bottom"/>
        <Button x:Name="sixButton" Content="6" HorizontalAlignment="Left" Margin="440,268,0,0" VerticalAlignment="Top" Width="200" Height="110" FontSize="80" Click="sixButton_Click" VerticalContentAlignment="Bottom"/>
        <Button x:Name="sevenButton" Content="7" HorizontalAlignment="Left" Margin="35,383,0,0" VerticalAlignment="Top" Width="200" Height="110" FontSize="80" Click="sevenButton_Click" VerticalContentAlignment="Bottom"/>
        <Button x:Name="eightButton" Content="8" HorizontalAlignment="Left" Margin="235,383,0,0" VerticalAlignment="Top" Width="200" Height="110" FontSize="80" Click="eightButton_Click" VerticalContentAlignment="Bottom"/>
        <Button x:Name="nineButton" Content="9" HorizontalAlignment="Left" Margin="440,383,0,0" VerticalAlignment="Top" Width="200" Height="110" FontSize="80" Click="nineButton_Click" VerticalContentAlignment="Bottom"/>
        <Button x:Name="zeroButton" Content="0" HorizontalAlignment="Left" Margin="235,498,0,0" VerticalAlignment="Top" Width="200" Height="110" FontSize="80" Click="tenButton_Click" VerticalContentAlignment="Bottom"/>
        <Button x:Name="clearButton" Content="C" HorizontalAlignment="Left" Margin="1156,153,0,0" VerticalAlignment="Top" Width="200" Height="150" FontSize="80" Click="clearButton_Click" VerticalContentAlignment="Bottom" RenderTransformOrigin="0.471,0.527"/>
        <Button Content="=" HorizontalAlignment="Left" Margin="1156,603,0,0" VerticalAlignment="Top" Height="150" Width="200" FontSize="100" Click="equalsButton_Click"/>


    </Grid>
</Page>
